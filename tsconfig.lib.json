{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "docs", "dist", ".idea", ".vscode"]
}
